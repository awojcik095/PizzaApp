<%- include('partials/nav') %>



    <div class="container">
        <div class="image-container">
            <img id="content1" class="slider-img img-active" src="../public/images/slider1.jpg" alt="">
            <img id="content2" class="slider-img " src="../public/images/slider2.jpg" alt="">
            <img id="content3" class="slider-img " src="../public/images/slider3.jpg" alt="">
            <img id="content4" class="slider-img " src="../public/images/slider4.jpg" alt="">
        </div>

        <div class="dot-container">
            <button onclick="dot(1)"></button>
            <button onclick="dot(2)"></button>
            <button onclick="dot(3)"></button>
            <button onclick="dot(4)"></button>
        </div>

        <button id="prev" onclick="prev()">&lt</button>
        <button id="next" onclick="next()">&gt</button>
    </div>


    <script type="text/javascript">
        let i = 0;
        let j = 4;

        const dots = document.querySelectorAll(".dot-container buttons");
        const images = document.querySelectorAll(".image-container images");



        function indicator(num) {
            dots.forEach(function (dot) {
                dot.style.backgroundColor = "transparent";
            });
            document.querySelector(".dot-container button:nth-child(" + num + ")").style.backgroundColor = "firebrick";
        }

        function next() {
            document.getElementById("content" + (i + 1)).classList.remove("img-active");
            i = (j + i + 1) % j;

            document.getElementById("content" + (i + 1)).classList.add("img-active");

            indicator(i + 1);
        }

        function prev() {
            document.getElementById("content" + (i + 1)).classList.remove("img-active");
            i = (j + i - 1) % j;

            document.getElementById("content" + (i + 1)).classList.add("img-active");

            indicator(i + 1);
        }




    </script>
    <script src="../public/skrypty.js"></script>
    </body>

    </html>